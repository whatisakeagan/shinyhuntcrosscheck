{
  "manifest_version": 3,
  "name": "Shiny Hunt Cross-Check",
  "version": "1.0",
  "description": "Find Pok√©mon from your list that aren't captured yet.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}